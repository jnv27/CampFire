<% layout('layouts/boilerplate')%>

<link rel="stylesheet" href="/stylesheets/flash.css">

<div class="container mt-5">
    <div class="card shadow offset-3 mb-5 py-5 px-0">
        <div class="row">
            <h3 class="text-center" >New Campground</h3>
            <hr class="offset-3" style="
                text-align: center;
                border: 0;
                height: 1px;
                width: 50%;
                background-image: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0));
            ">
            <div class="col-6 offset-3">
                <form action="/campgrounds" method="POST" novalidate class = "validated-form" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" id="title" name="camp[title]" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" type="text" id="location" name="camp[location]" required>
                    </div>
                    <!-- <div class="mb-3">
                        <label class="form-label" for="image"></label>Image Url</label>
                        <input class="form-control" type="text" id="image" name="camp[image]" required>
                    </div> -->
                    <div class="mb-3">
                        <label class="form-label" for="price">Campground Price</label>
                        <div class="input-group">
                            <span class="input-group-text" id="price-label">$</span>
                            <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                                aria-describedby="price-label" name="camp[price]" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" type="text" id="description" name="camp[description]" required></textarea>
                    </div>
                    <div class="mb-3">
                        <div class="form-file custom-file">
                            <input type="file" class="form-file-input" id="image" name="image" multiple>
                            <label class="form-file-label" for="image">
                                <span class="form-file-text custom-file-label">Choose image(s)...</span>
                                <span class="form-file-button">Browse</span>
                            </label>
                        </div>
                    </div>
                    <!-- <input type="file" name="image" multiple> -->
                    <div class="mb-3">
                        <button class="mt-3 w-100 btn btn-lg btn-primary">Add Campground</button>
                    </div>
                </form>
                <!-- <a href="/campgrounds">All Campgrounds</a> -->
            </div>
        </div> 
    </div>
</div>
        