<div id="map" style="width: 100%; height: 500px" class="mt-0 mb-5"></div>

<div class="container mt-5">
    
    <div>
        <!-- <h1>All Campgrounds</h1> -->
        <a class="mb-3 btn btn-md btn-primary" href="/campgrounds/new">Add Campground+</a>
    </div>

    
    <% for (let camp of camps){%>
        <div class="card mb-3" >
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=camp.images[0].url%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= camp.title %> </h5>
                        <p class="card-text"><%= camp.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= camp.location%></small>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%=camp._id%>">View <%=camp.title%></a>
                    </div>
                </div>
            </div> 
        </div>
    <% }%> 
         
</div>

<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const camps = { features: <%- JSON.stringify(camps) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>